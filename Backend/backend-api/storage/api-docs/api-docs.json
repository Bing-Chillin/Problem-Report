        "/api/reports": {
            "get": {
                "tags": [
                    "Reports"
                ],
                "summary": "Get a list of all reports (Admin/Developer/Dispatcher only)",
                "operationId": "42398321972bc3074eef76718e0fd9dc",
                "responses": {
                    "200": {
                        "description": "List of reports returned successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "subsystem": {
                                                "type": "string",
                                                "example": "ProblemReport"
                                            },
                                            "text": {
                                                "type": "string",
                                                "example": "Something's broken."
                                            },
                                            "date": {
                                                "type": "string",
                                                "format": "date-time",
                                                "example": "2025-08-01T10:30:00Z"
                                            },
                                            "status": {
                                                "type": "string",
                                                "example": "open"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "janos@example.com"
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Kovács János"
                                            },
                                            "images": {
                                                "type": "array",
                                                "items": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "filename": {
                                                            "type": "string",
                                                            "example": "1692697800_abc123.jpg"
                                                        },
                                                        "type": {
                                                            "type": "string",
                                                            "example": "jpg"
                                                        },
                                                        "order_index": {
                                                            "type": "integer",
                                                            "example": 0
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden - Admin/Developer/Dispatcher role required"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Reports"
                ],
                "summary": "Create new report (All authenticated users)",
                "description": "Creates a new problem report with optional image attachments. For testing file uploads, use Postman instead of Swagger UI. In Postman: use form-data, add 'images[]' as key (select 'File' type), and attach multiple files with the same key name.",
                "operationId": "318de4ef8123b483320dc9dbb45b6a43",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "subsystem",
                                    "text",
                                    "status"
                                ],
                                "properties": {
                                    "subsystem": {
                                        "description": "The subsystem where the problem occurred",
                                        "type": "string",
                                        "example": "ProblemReport"
                                    },
                                    "text": {
                                        "description": "Description of the problem",
                                        "type": "string",
                                        "maxLength": 1000,
                                        "example": "Something is broken"
                                    },
                                    "status": {
                                        "description": "Status of the report",
                                        "type": "string",
                                        "enum": [
                                            "nyitott",
                                            "lezárt",
                                            "folyamatban"
                                        ],
                                        "example": "nyitott"
                                    },
                                    "images[]": {
                                        "description": "Array of image files (Use Postman: form-data with key 'images[]', select File type, max 5 files, JPG/PNG, max 2MB each)",
                                        "type": "array",
                                        "items": {
                                            "type": "string",
                                            "format": "binary"
                                        },
                                        "maxItems": 5
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Report created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "subsystem": {
                                            "type": "string",
                                            "example": "ProblemReport"
                                        },
                                        "text": {
                                            "type": "string",
                                            "example": "Something is broken"
                                        },
                                        "status": {
                                            "type": "string",
                                            "example": "nyitott"
                                        },
                                        "date": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-08-22T12:00:00Z"
                                        },
                                        "creator_id": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-08-22T12:00:00Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-08-22T12:00:00Z"
                                        },
                                        "images": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "report_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "filename": {
                                                        "type": "string",
                                                        "example": "1692697800_abc123.jpg"
                                                    },
                                                    "type": {
                                                        "type": "string",
                                                        "example": "jpg"
                                                    },
                                                    "order_index": {
                                                        "type": "integer",
                                                        "example": 0
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-08-22T12:00:00Z"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "format": "date-time",
                                                        "example": "2025-08-22T12:00:00Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "subsystem": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The subsystem field is required."
                                                    }
                                                },
                                                "images": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Images must be provided as an array."
                                                    }
                                                },
                                                "images.0": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Each image size cannot exceed 2MB."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error during report creation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Failed to create report"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
