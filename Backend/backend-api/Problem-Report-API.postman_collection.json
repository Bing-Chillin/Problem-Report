{
	"info": {
		"_postman_id": "problem-report-api",
		"name": "Problem Report API",
		"description": "Collection for testing the Problem Report API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://127.0.0.1:8000",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"Test\",\n  \"last_name\": \"User\",\n  \"username\": \"testuser\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"register"
							]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('auth_token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"login\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"login"
							]
						},
						"description": "Login with email or username. Use 'login' field which accepts either email address or username."
					}
				}
			]
		},
		{
			"name": "Reports",
			"item": [
				{
					"name": "Create Report (with images)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "subsystem",
									"value": "ProblemReport",
									"type": "text"
								},
								{
									"key": "text",
									"value": "Test report with multiple images",
									"type": "text"
								},
								{
									"key": "status",
									"value": "nyitott",
									"type": "text"
								},
								{
									"key": "images[]",
									"type": "file",
									"src": [],
									"description": "Select multiple image files (JPG/PNG, max 2MB each, up to 5 files)"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/reports",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports"
							]
						},
						"description": "Create a new report with image attachments. \n\nINSTRUCTIONS:\n1. Make sure you're logged in (auth token is set)\n2. In the Body tab, select 'form-data'\n3. For the 'images[]' field, click the dropdown and select 'File'\n4. You can add multiple 'images[]' entries to upload multiple files\n5. Each file should be JPG or PNG, max 2MB\n6. Maximum 5 images per report"
					}
				},
				{
					"name": "Create Report (no images)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "subsystem",
									"value": "ProblemReport",
									"type": "text"
								},
								{
									"key": "text",
									"value": "Test report without images",
									"type": "text"
								},
								{
									"key": "status",
									"value": "nyitott",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/reports",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports"
							]
						}
					}
				},
				{
					"name": "Get All Reports (Admin/Developer/Dispatcher)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/reports",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports"
							]
						}
					}
				},
				{
					"name": "Get My Reports",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/my-reports",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"my-reports"
							]
						}
					}
				},
				{
					"name": "Get Report Image",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/reports/1/image",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports",
								"1",
								"image"
							]
						},
						"description": "Replace '1' with the actual report ID"
					}
				},
				{
					"name": "Get My Report Image",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/my-reports/1/image",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"my-reports",
								"1",
								"image"
							]
						},
						"description": "Replace '1' with the actual report ID"
					}
				},
				{
					"name": "Update Report",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"subsystem\": \"ProblemReport\",\n  \"text\": \"Updated report text\",\n  \"status\": \"folyamatban\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/reports/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports",
								"1"
							]
						},
						"description": "Replace '1' with the actual report ID"
					}
				},
				{
					"name": "Delete Report",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/reports/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"reports",
								"1"
							]
						},
						"description": "Replace '1' with the actual report ID"
					}
				}
			]
		}
	]
}
